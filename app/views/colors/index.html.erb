<ol class="breadcrumb">
  <li><%= link_to "Dashboard", root_path %></li>
  <li><%= link_to "Settings", settings_path %></li>
  <li class="active">Colors</li>
  <% if current_admin %>
    <li><%= link_to "New Color", new_color_path, class: "btn btn-default" %></li>
  <% end %>
</ol>

<h1>Listing colors</h1>

<table class="table">
  <thead>
    <tr>
      <th>Color</th>
      <th>Name</th>
      <th>Hex</th>
      <% if current_admin %>
        <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @colors.each do |color| %>
      <tr>
        <td><span class="box" style="background-color: <%= color.hex %>"></span></td>
        <td><%= color.name %></td>
        <td><%= color.hex %></td>
        <% if current_admin %>
          <td><%= link_to 'Edit', edit_color_path(color) %></td>
          <td><%= link_to 'Destroy', color, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

