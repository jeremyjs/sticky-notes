<ol class="breadcrumb">
  <li><%= link_to "Dashboard", root_path %></li>
  <li class="active">People</li>
  <% if current_admin %>
    <li><%= link_to "New Person", new_person_path, class: "btn btn-default" %></li>
  <% end %>
</ol>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Roles</th>
      <th>Skills</th>
      <th>Projects</th>
      <% if current_admin %>
        <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr id="person-<%= person.id %>">
        <td><%= person.name %></td>
        <td><%= person.roles.map{ |r| r.name }.to_sentence %></td>
        <td><%= person.skills.map{ |s| s.name }.to_sentence %></td>
        <td><%= person.projects.map{ |p| p.name }.to_sentence %></td>
        <% if current_admin %>
          <td>
            <%= link_to 'Edit', edit_person_path(person) %> |
            <%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

