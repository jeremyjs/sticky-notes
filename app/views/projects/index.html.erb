<ol class="breadcrumb">
  <li><%= link_to "Dashboard", root_path %></li>
  <li class="active">Projects</li>
  <% if current_admin %>
    <li><%= link_to "New Project", new_project_path, class: "btn btn-default" %></li>
  <% end %>
</ol>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <% if current_admin %>
        <th colspan="3"></th>
      <% else %>
        <th colspan="1"></th>
      <% end %>
      </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= link_to 'Show', project %> |
        <% if current_admin %>
          <%= link_to 'Edit', edit_project_path(project) %> |
          <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

